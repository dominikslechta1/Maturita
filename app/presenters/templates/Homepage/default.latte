{* Latte template *}

{block content}
{var $n = 0}
<div class="projects-div">
    {if $projects !== null}
        {foreach $projects as $id => $item}
            <div class="project {$id} hoverable animated  zoomIn delay-{$n}s">
                <!-- Card -->
                <a class="project {$id} project-link" n:href="Homepage:project $item->idProjects">
                    <div class="card card-cascade wider reverse ">


                        <!-- Card content -->
                        <div class="card-body card-body-cascade text-center">

                            <!-- Title -->
                            <h4 class="card-title"><strong class="card-title-strong">{$item->Name}</strong></h4>
                            <!-- Subtitle -->
                            <h6 class="font-weight-bold indigo-text py-2">{$item->ref('users','User')->UserName}</h6>
                            <!-- Text -->
                            <p class="card-subtitle">{$item->Desc}</p>
                            <p class="card-text">{$item->Year}</p>
                        </div>

                    </div>
                </a>
                <!-- Card -->
            </div>
                        {var $n = $n+1}
        {/foreach}
    {else}
        <p>nejsou projekty k vidění</p>
    {/if}
</div>
